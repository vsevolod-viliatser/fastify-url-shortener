generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  urls      Url[]
  createdAt DateTime @default(now())
}

model Url {
  id        String   @id @default(cuid())
  code      String   @unique
  original  String
  clicks    Int      @default(0)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}